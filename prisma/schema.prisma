// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  phone         String   @unique
  uid           String   @unique
  name          String?
  avatar        String?
  balance       Money?
  roles         String[]
  address       Address?
  espace        Espace?
  archived      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  transSended   Trans[]  @relation("senderRef")
  transReceived Trans[]  @relation("receiverRef")
}

type Espace {
  name    String
  city    String
  address String
  logo    String
}

type Address {
  street  String
  city    String
  latLong String[]
}

model Trans {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  product     String?
  amount      Money
  cost        Float    @default(0)
  sender      User     @relation(fields: [senderRef], references: [id], name: "senderRef")
  receiver    User     @relation(fields: [receiverRef], references: [id], name: "receiverRef")
  status      String
  transType   String   @default("recharge")
  createdAt   DateTime @default(now())
  senderRef   String   @db.ObjectId
  receiverRef String   @db.ObjectId
  owner       String
}

model Company {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  address   String?
  contacts  String[]
  banner    String?
  logo      String?
  rccm      String?
  idNat     String?
  transCost Float    @default(0)
}

type Money {
  amount   Float
  currency String
}
